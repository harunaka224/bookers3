<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%=render 'users/info', user: @book_user %>
      <%=render 'form', book: @book_new  %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to(@book_user) do %>
                <%= image_tag @book.user.get_profile_image, size:'100x100' %><br>
                <%= @book.user.name %>
                <% end %>
            </td>
            <td><%= link_to @book.title, @book %></td>
            <td><%= @book.body %></td>
            <td id="comments_counter"><%= render 'comments/counter', book: @book %></td>
            <td id="btn_<%=@book.id %>">
                  <%= render "favorites/btn", book: @book %>
            </td>
          </tr>
        </tbody>
      </table>
      <div id="comments_index"><%= render "comments/index", book: @book, user: @book_user %></div>
      <div><%= render "comments/form", book: @book, comment: @comment %></div>
    </div>
  </div>
</div>