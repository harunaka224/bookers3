<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%=render 'users/info', user: @book_user %>
      <%=render 'form', book: @book_new  %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to(@book_user) do %>
                <%= image_tag @book.user.get_profile_image, size:'100x100' %><br>
                <%= @book.user.name %>
                <% end %>
            </td>
            <td><%= link_to @book.title, @book %></td>
            <td><%= @book.body %></td>
            <td><% unless user_signed_in? && current_user.id == book.user_id %>
                  <!-- 自分の投稿にはいいねができない -->
                  <%= render "favorites/btn", book: @book %>
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>