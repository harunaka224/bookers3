<h2>Books</h2>
<table class="table table-hover">
  <thead>
    <tr class="text-light">
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tboody>
    <% books.each do |book| %>
    <tr class="text-light">
      <td><%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image, size:"50x50" %>
            <%= book.user.name %>
          <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td><% unless user_signed_in? && current_user.id == book.user_id %>
          <!-- 自分の投稿にはいいねができない -->
      　　　　<%= render "favorites/btn", book: book %> 
    　   　 <% end %>
    　</td>
    </tr>
    <% end %>
  </tboody>
</table>